      <input type="hidden" name="paypal[redirect_cancel_url]" value="{% path_to page %}">
      <button type="submit" name="button" class="btn btn-warning btn-lg text-dark ">
        <img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/PP_logo_h_100x26.png" alt="PayPal Logo">
