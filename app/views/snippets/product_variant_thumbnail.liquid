
<div class="card product-thumbnail bg-white m-0 h-100 pb-1 {%if display_horizontal == true%}product-thumbnail-horizontal{%endif%}" data-link="{{product.url_key  | prepend: url_base }}?ref={{product.sku}}">
  <div class="product-thumbnail-img">
      <img class="group list-group-image card-img-top p-2" src="{{product.images.first.medium.src  | default: site.metafields.theme.noimage }}" alt="{{product.images.first.medium.alt}}" />
  </div>
  <div class="product-thumbnail-price card-body p-3 p-xl-2" data-link="{{product.url_key  | prepend: url_base }}?ref={{product.sku}}">
    <span class="small">
      <small>{{'product_price_from' | translate}} </small>
    </span>
    <strong class="h5">
      <span class="font-weight-bold {%if product.price.discount > 0%}text-warning{%else%}text-dark{% endif %}">
        {% include 'currency' | value: product.price.value %}
      </span>
      {%if product.price.discount > 0%}
        <span class="text-dark small">
          <s>{% include 'currency' | value: product.price.original_value %}</s>
        </span>
      {% endif %}
    </strong>
  </div>
  <div class="product-thumbnail-name card-body p-3 p-xl-2">
    <div class="font-weight-bold">
      <a href="{{product.url_key  | prepend: url_base }}?ref={{product.sku}}" class="card-title">
        {{product.model.name}}
        <div class="small">{{product.name}}</div>
      </a>
    </div>

  </div>
</div>
