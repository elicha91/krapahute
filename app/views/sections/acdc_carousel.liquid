---
{
  "name": "ACDC Carousel",
  "class": "",
  "icon": "slide",
  "keep_icon": true,
  "settings": [
    {
      "label": "Display Controls",
      "id": "display_control",
      "type": "radio",
      "options": [
        {"label": "Display slides controls","value": "true"},
        {"label": "Hide slides controls", "value": "false"}
      ]
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "list_item",
      "settings": [
        {
          "section_name": "Carousel",
          "label": "Slide title",
          "id": "title",
          "type": "text"
        },
        {
          "label": "Slide Image",
          "id": "picture",
          "type": "image_picker",
          "default": "",
          "height": "550"
        },
        {
          "label": "link",
          "id": "link",
          "type": "text"
        },
        {
          "label": "Caption",
          "id": "caption",
          "type": "text",
          "html": true,
          "nb_rows": 10
        }
      ]
    }
  ],
  "default": {
    "settings": {
      "section_name": "Main carousel",
      "identifier": "main"
    },
    "blocks": [
      {
        "type": "list_item",
        "settings": {
          "title": "Slide #1",
          "picture": "images/vitrine4.jpg",
          "link": ""
        }
      },
      {
        "type": "list_item",
        "settings": {
          "title": "Slide #2",
          "picture": "images/vitrine4.jpg",
          "link": "",
          "caption": "<h5>Slide #2</h5><p>Maecenas varius nibh a maximus vehicula</p>"
        }
      }
    ]
  }
}
---

<div class="container-fluid">
  <div class="row text-center" id="slider">
    <div class="carousel slide" id="carousel-vitrine" data-ride="carousel">
      <div class="carousel-inner">
        {% for slide in section.blocks %}
          <div class="{%if forloop.index0 == 0%}active{%endif%} carousel-item">
            <a href="{{slide.link}}">
              <img src="{{ slide.settings.picture }}" alt="{{slide.settings.title}}" class="w-100">
            </a>
              <div class="carousel-caption">
                <div class="row align-self-center justify-content-center">
                  <div class="carousel-caption-content mt-2 mb-2">
                    <div class="p-3 p-lg-4">
                      {{ slide.settings.caption }}
                    </div>
                  </div>
                </div>
              </div>
          </div>
        {% endfor %}
      </div>
      <a class="carousel-control-prev" href="#carousel-vitrine" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carousel-vitrine" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
